@model IEnumerable<EasyCredit.Models.Clients>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10">
        <h2>Relacion de Clientes</h2>
    </div>
    <div class="col-md-2">
        <span id="btn_links" class="text-right btn btn-primary">
            @Html.ActionLink("Nuevo Cliente", "Create")
        </span>
    </div>
</div>
<br />
<table class="table table-condensed table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cte_FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cte_LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cte_Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cte_Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisteredBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </th>
        <th class="text-right"> Acciones </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cte_FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cte_LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cte_Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cte_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisteredBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>

            <td style="margin: 0 !important;" id="btn_links" class="btn-group">
                <span class="btn btn-primary btn-sm"> @Html.ActionLink("Editar", "Edit", new { id = item.Id }) </span>
                <span class="btn btn-info btn-sm"> @Html.ActionLink("Detalles", "Details", new { id = item.Id }) </span>
                <span class="btn btn-danger btn-sm"> @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }) </span>
            </td>
        </tr>
    }

</table>
